<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.lessspring.org.repository.UserMapper">

    <resultMap type="com.lessspring.org.db.dto.UserDTO" id="UserDTO">
        <id column="id" property="id"/>
        <result column="user_name" property="username"/>
        <result column="password" property="password"/>
        <result column="role_type" property="roleType"/>
    </resultMap>

    <!--  save user  -->
    <insert id="saveUser">
        INSERT INTO user(user_name, password, role_type) VALUE (#{dto.username}, #{dto.password}, #{roleType})
    </insert>

    <!--  modify user info  -->
    <update id="modifyUser">
        UPDATE user
        SET user_name = #{dto.username},
            password  = #{dto.password},
            role_type = #{dto.roleType}
    </update>

    <!--  rmove user  -->
    <delete id="removeUser">
        DELETE
        FROM user
        WHERE user_name = #{username}
    </delete>

    <select id="findUserByName" resultType="com.lessspring.org.db.dto.UserDTO">
        select *
        from user
        where user_name = #{username}
    </select>

</mapper>